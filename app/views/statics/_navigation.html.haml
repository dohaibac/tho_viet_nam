%p{:align=> "right"}  
  - if logged_in?
    %strong 
      You are logged in as 
      =link_to current_user.login, user_path(current_user)
    = link_to 'New post', new_user_post_path(current_user)
    = link_to 'Logout', logout_path
  - else  
    %strong You are currently not logged in.
    = link_to 'Login', login_path
    or
    = link_to 'Sign Up', signup_path
  = link_to "All User", users_path
